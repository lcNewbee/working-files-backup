{
  "presets": [
    "latest",
    "stage-3",
    "react"
  ],
  "env": {
    "development": {
      "presets": [
        // "es2015-loose"
      ]
    },
    "test": {
      "plugins": ["transform-es2015-modules-commonjs"]
    }
  },
  "plugins": [
    "add-module-exports",
    ["transform-runtime", {
      "helpers": true,
      "polyfill": true, // defaults to true
      "regenerator": true // defaults to true
    }],
    ["module-resolver", {
      "root": ["./src"],
      "alias": {
        "shared": "./shared",

        // For test
        "src": "./src"
      }
    }]
  ]
}
